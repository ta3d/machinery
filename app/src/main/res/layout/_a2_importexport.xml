<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccentDark"
        android:fitsSystemWindows="false"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetStartWithNavigation="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:background="@color/oo_grey_10"
        android:clipToPadding="false"
        android:padding="@dimen/padding_m2"
        android:scrollbars="none"
        android:scrollingCache="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/filepathText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_m1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/padding_m1"
                    android:layout_height="@dimen/padding_m1"
                    android:layout_margin="@dimen/padding_m"
                    android:src="@drawable/shape_doughnut"
                    android:tint="@color/colorSecondary" />

                <View
                    android:layout_width="@dimen/padding_m1"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Path to file for import/export"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/oo_grey_80" />

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/filepathInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_m1"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="1dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editFilePath"
                        style="@style/oo.Input.Grey"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding_l2"
                        android:background="@android:color/transparent"
                        android:hint=""
                        android:minHeight="@dimen/padding_l1"
                        android:paddingLeft="@dimen/padding_m2"
                        android:paddingRight="@dimen/padding_m2" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/oo_grey_10" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/password1Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_m1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/padding_m1"
                    android:layout_height="@dimen/padding_m1"
                    android:layout_margin="@dimen/padding_m"
                    android:src="@drawable/shape_doughnut"
                    android:tint="@color/colorSecondary" />

                <View
                    android:layout_width="@dimen/padding_m1"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password1"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/oo_grey_80" />

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/password1Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_m1"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="1dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editPassword1"
                        style="@style/oo.Input.Grey"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding_l2"
                        android:background="@android:color/transparent"
                        android:hint=""
                        android:minHeight="@dimen/padding_l1"
                        android:paddingLeft="@dimen/padding_m2"
                        android:paddingRight="@dimen/padding_m2" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/oo_grey_10" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/password2Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_m1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/padding_m1"
                    android:layout_height="@dimen/padding_m1"
                    android:layout_margin="@dimen/padding_m"
                    android:src="@drawable/shape_doughnut"
                    android:tint="@color/colorSecondary" />

                <View
                    android:layout_width="@dimen/padding_m1"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password 2"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/oo_grey_80" />

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/password2Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_m1"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="1dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editPassword2"
                        style="@style/oo.Input.Grey"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding_l2"
                        android:background="@android:color/transparent"
                        android:hint=""
                        android:minHeight="@dimen/padding_l1"
                        android:paddingLeft="@dimen/padding_m2"
                        android:paddingRight="@dimen/padding_m2" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/oo_grey_10" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_export"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/padding_m2"
        android:clickable="true"
        android:tint="@android:color/white"
        app:backgroundTint="@color/colorAccentDark"
        app:fabSize="normal"
        app:rippleColor="@color/oo_grey_10"
        app:srcCompat="@drawable/chevron_left" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_import"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/padding_m2"
        android:clickable="true"
        android:tint="@android:color/white"
        app:backgroundTint="@color/colorAccentDark"
        app:fabSize="normal"
        app:rippleColor="@color/oo_grey_10"
        app:srcCompat="@drawable/chevron_right" />


</RelativeLayout>